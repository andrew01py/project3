<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Contact Form with Animations</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1><i class="fas fa-paper-plane"></i> Contact Us</h1>
            <p>Get in touch with our team</p>
        </header>

        <main class="main-content">
            <!-- Scope Demonstration Section -->
            <section class="card scope-section">
                <h2>Scope Demonstration</h2>
                <div class="scope-demo">
                    <button id="scope-btn" class="btn">
                        <i class="fas fa-code"></i> Test Scope
                    </button>
                    <div class="output" id="scope-output"></div>
                </div>
            </section>

            <!-- Contact Form Section -->
            <section class="card form-section">
                <h2>Send Us a Message</h2>
                <form id="contact-form">
                    <div class="form-group">
                        <label for="name"><i class="fas fa-user"></i> Name</label>
                        <input type="text" id="name" placeholder="Your name">
                        <span class="error-message" id="name-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label for="email"><i class="fas fa-envelope"></i> Email</label>
                        <input type="email" id="email" placeholder="your@email.com">
                        <span class="error-message" id="email-error"></span>
                    </div>
                    
                    <div class="form-group">
                        <label for="message"><i class="fas fa-comment"></i> Message</label>
                        <textarea id="message" placeholder="Your message"></textarea>
                        <span class="error-message" id="message-error"></span>
                    </div>
                    
                    <button type="submit" class="btn submit-btn">
                        <i class="fas fa-paper-plane"></i> Send Message
                    </button>
                </form>
                <div id="form-success" class="hidden">
                    <div class="success-animation">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3>Message Sent!</h3>
                    <p>We'll get back to you soon.</p>
                </div>
            </section>

            <!-- Animation Showcase -->
            <section class="card animation-section">
                <h2>Animation Showcase</h2>
                <div class="animation-box" id="animated-box"></div>
                <div class="animation-controls">
                    <button id="bounce-btn" class="btn">
                        <i class="fas fa-bounce"></i> Bounce
                    </button>
                    <button id="pulse-btn" class="btn">
                        <i class="fas fa-heart"></i> Pulse
                    </button>
                    <button id="color-btn" class="btn">
                        <i class="fas fa-palette"></i> Color Shift
                    </button>
                </div>
            </section>
        </main>
    </div>

    <script src="script.js"></script>
</body>
</html>